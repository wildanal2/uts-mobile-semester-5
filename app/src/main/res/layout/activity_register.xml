<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RegisterActivity">

    <Button
        android:id="@+id/btn_back_tweet"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_back" />

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_below="@+id/img_1"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your account"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/et_name_reg"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:ems="15"/>
        <EditText
            android:id="@+id/et_email_reg"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Phone number or email address"
            android:ems="15"/>
        <EditText
            android:id="@+id/et_pwd_reg"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:ems="15"
            android:inputType="textPassword"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1px"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp">

        <Button
            android:id="@+id/btn_singup"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="clip_horizontal|end|center"
            android:layout_marginRight="15dp"
            android:text="Sign up"
            android:background="@drawable/btn_rounded"
            android:textColor="#FFF" />
    </android.support.v7.widget.CardView>

</RelativeLayout>