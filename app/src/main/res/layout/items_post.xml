<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    android:layout_marginBottom="2px">


    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagess"
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_named"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wildan_al"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_tglpost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="07 Oct 17" />
            </RelativeLayout>

            <TextView
                android:layout_margin="8dp"
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Welcome back to #TEI2018 @PeterStylesMLA
                    As we examine @jokowi Global Maritime Fulcrum, @Menlu_RI #IndoPacific agenda, and role of China, US, Japan  India in geopolitics, linking north Australia through eastern Indonesia to Asia is more crucial in the coming yrs @fanniebay â€“ "
                />

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_comment"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="1"/>

                <Button
                    android:id="@+id/btn_retweet"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/btn_comment"
                    android:text="2"/>
                <Button
                    android:id="@+id/btn_like"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/btn_retweet"
                    android:text="3"/>
                <Button
                    android:id="@+id/btn_shared"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/btn_like"
                    android:text="4"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>