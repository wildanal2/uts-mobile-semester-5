<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    android:layout_marginBottom="2px">


    <LinearLayout
        android:id="@+id/post_main_lay"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/images_profil"
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_named"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="Wildan_al"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:textSize="14sp"
                        android:text="*wildanAl2"/>

                    <TextView
                        android:id="@+id/tv_tglpost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="` 07 Oct 17" />
                </LinearLayout>

                <Button
                    android:id="@+id/collaps_btn"
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_collapse"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_status"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Welcome back and role of China, US, Japan  India in geopolitics, linking north Australia through eastern Indonesia to Asia is more crucial in the coming yrs @fanniebay â€“ "
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/post_main_lay"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <Button
            android:id="@+id/reply_btn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_reply" />

        <Button
            android:id="@+id/retwett_btn"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/ic_retweet" />


        <Button
            android:id="@+id/loved_btn"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/ic_loved" />

        <Button
            android:id="@+id/shared_btn"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/ic_share" />
    </LinearLayout>

</RelativeLayout>